{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.heart": {
      "geometry": "Geometry.heart",
      "materials": [{ "*": "Material.hp" }],
      "textures": [ "Texture.heart" ],
      "is_hurt_color": { "r": "0.0", "g": "0.0", "b": "0.0", "a": "0.0" },
      "on_fire_color": { "r": "0.0", "g": "0.0", "b": "0.0", "a": "0.0" },
      "part_visibility": [
        { "*": "query.health / 100 >= 1 && !query.is_invisible && query.distance_from_camera <= 20 && query.is_alive" },
        { "first": false },
        { "second": false },
        { "third": false }
      ],
      "arrays": {
        "textures": {
          "array.textures": [
            "Texture.heart0",
            "Texture.heart1",
            "Texture.heart2",
            "Texture.heart3",
            "Texture.heart4",
            "Texture.heart5",
            "Texture.heart6",
            "Texture.heart7",
            "Texture.heart8",
            "Texture.heart9"
          ]
        }
      }
    },
